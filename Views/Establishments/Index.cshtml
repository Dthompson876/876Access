@model IEnumerable<_876Access.Models.Establishments>

@{
    ViewData["Title"] = "Establishments";
}

<h1>List of Establishments that cater to the disabled</h1>

<p>
    <a asp-action="Create">Add Establishment</a>
</p>
<table id="EmployeeAA" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Website)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CloseHours)
            </th>
            
            <th>
               
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CloseHours)
            </td>
           
            <td>
                    <img src="~/Images/@item.FileName" style="width:75px; height:75px;"/>
               
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/user.png " style="width: 40px;" /></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/employee.png" style="width: 40px;" /></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/delete.png" style="width: 40px;" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
<br />
<br />
<br />
<br />
@section scripts {




    <script>
         $(document).ready( function () {
            $('#EmployeeAA').DataTable();
        } );

    </script>
}